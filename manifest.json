{
  "manifest_version": 3,
  "name": "Husky Task Helper",
  "version": "1.0",
  "description": "Break down your daily tasks into manageable subtasks",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["https://api.anthropic.com/*"]
}
